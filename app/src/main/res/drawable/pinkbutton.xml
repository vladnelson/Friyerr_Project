<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3dip" />
            <gradient
                    android:startColor="#F99AAB"
                    android:endColor="#000"
                    android:angle="270"/>

            <stroke
                    android:width="1dp"
                    android:color="#F20000"/>


        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="3dip" />
            <gradient
                    android:startColor="#F99AAB"
                    android:centerColor="#F99AAB"
                    android:endColor="#F99AAB"/>



        </shape>
    </item>
</selector>