<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#ef4444" />
            <stroke
                    android:width="1dp"
                    android:color="#3B5998" />
            <corners
                    android:radius="50dp" />
            <padding
                    android:top="10dp"
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
            />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#3B5998"
                    android:endColor="#3B5998"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#3B5998" />
            <corners
                    android:radius="50dp" />
            <padding
                    android:top="10dp"
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
            />
        </shape>
    </item>
</selector>