<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#ef4444" />
            <stroke
                    android:width="1dp"
                    android:color="#E5E5E5" />
            <corners
                    android:radius="50dp" />
            <padding
                    android:top="10dp"
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
            />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#E5E5E5"
                    android:endColor="#E5E5E5"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#E5E5E5" />
            <corners
                    android:radius="50dp" />
            <padding
                    android:top="10dp"
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
            />

        </shape>
    </item>
</selector>