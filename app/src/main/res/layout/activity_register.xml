<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="15dp"
              tools:context=".view.ui.Activity.FriyerrRegisterActivity"
              android:orientation="vertical" android:background="@color/colorWhite">

    <ImageView
            android:id="@+id/ImgInRegisterForFriyerr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/friyerr_logo_black_xxxhdpi"/>

    <TextView
            android:id="@+id/txtInRegisterForVRegister"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="REGISTER"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
        <EditText
                android:id="@+id/EitInRegisterForEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email address"
                android:padding="15dp"
                android:drawableLeft="@drawable/icon_email"
                android:drawableStart="@drawable/icon_email"
                android:drawablePadding="5dp"
                android:textColor="#000"
                android:background="@drawable/edittextstyle"
                android:layout_centerVertical="true"
                android:inputType="textEmailAddress"/>
        <EditText
                android:id="@+id/EitInRegisterForPseudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pseudo"
                android:padding="15dp"
                android:drawableLeft="@drawable/icon_person"
                android:drawableStart="@drawable/icon_person"
                android:drawablePadding="5dp"
                android:textColor="#000"
                android:background="@drawable/edittextstyle"
                android:layout_centerVertical="true"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp"/>

        <EditText
                android:id="@+id/EitInRegisterForPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/icon_lock"
                android:drawableStart="@drawable/icon_lock"
                android:textColor="#000"
                android:background="@drawable/edittextstyle"
                android:layout_centerVertical="true"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"/>

        <EditText
                android:id="@+id/EitInRegisterForConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password Again"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/icon_lock"
                android:drawableStart="@drawable/icon_lock"
                android:textColor="#000"
                android:background="@drawable/edittextstyle"
                android:layout_centerVertical="true"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
        <LinearLayout
                android:id="@+id/BtnInRegisterForRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bluebutton"
                android:layout_margin="10dp">

            <TextView
                    android:id="@+id/TxtInRegisterForRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"
                    style="@style/button_text"
                    android:background="#00000000"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>
            <ProgressBar
                    android:id="@+id/ProgressbarRegisterForRegister"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="1dp"
                    android:background="#00000000"
                    android:progressDrawable="@drawable/progressbarcirculairebtn"
                    android:visibility="visible"
                    android:indeterminateTint="@color/colorWhite"/>

        </LinearLayout>
        <Button
                android:id="@+id/BtnInRegisterForCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_button"
                android:text="CANCEL"
                android:layout_margin="10dp"
                style="@style/button_text"/>
    </LinearLayout>
</LinearLayout>