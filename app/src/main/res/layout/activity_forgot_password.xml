<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="15dp"
              tools:context=".view.ui.activity.FriyerrForgotPasswordActivity"
              android:orientation="vertical" android:background="@color/colorWhite">
    <ImageView
            android:id="@+id/ImgInForgotPasswordForFriyerr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/friyerr_logo_black_xxxhdpi"/>

    <TextView
            android:id="@+id/txtInForgotPasswordForForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="FORGOT PASSWORD"
            android:textSize="23sp"
            android:textColor="@color/colorAccent"/>

    <TextView
            android:id="@+id/txtInForgotPasswordForForgotPasswordtext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Enter your email address and we'll send you a link to reset your password"
            android:textSize="12sp"
            android:textColor="#808080"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical" android:gravity="center_horizontal|top|center_vertical">
        <EditText
                android:id="@+id/EitInForgotPasswordForEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email address"
                android:padding="20dp"
                android:drawableLeft="@drawable/icon_email"
                android:drawableStart="@drawable/icon_email"
                android:drawablePadding="5dp"
                android:textColor="#000"
                android:background="@drawable/edittextstyle"
                android:layout_centerVertical="true"
                android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
        <Button
                android:id="@+id/BtnInForgotPasswordForRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bluebutton"
                android:text="RESET"
                style="@style/button_text"
                android:layout_margin="10dp"/>
        <Button
                android:id="@+id/BtnInForgotPasswordForCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_button"
                android:text="CANCEL"
                android:layout_margin="10dp"
                style="@style/button_text"/>
    </LinearLayout>


</LinearLayout>
