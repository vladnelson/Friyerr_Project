<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout
                android:id="@+id/PlaceProfile"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
            <RelativeLayout
                    android:id="@+id/PlaceImgProfile"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/ImgProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@drawable/profilestyle"/>
                <TextView
                        android:id="@+id/badge_notification_Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/ImgProfile"
                        android:layout_alignBottom="@id/ImgProfile"
                        android:background="@drawable/item_count"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" android:fontFamily="@font/montserratregular"/>
            </RelativeLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/PlaceImgProfile"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/TxtFullNameProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" android:textSize="18sp"
                        android:paddingBottom="10dp"
                        android:textColor="@android:color/black" android:fontFamily="@font/montserratfont"/>
                <TextView
                        android:id="@+id/TxtCityForProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" android:textSize="@dimen/textTxtNormal"
                        android:paddingBottom="10dp"
                        android:textColor="@android:color/darker_gray" android:fontFamily="@font/montserratfont"/>
                <TextView
                        android:id="@+id/TxtPseudoForProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" android:textSize="@dimen/textTxtNormal"
                        android:paddingBottom="5dp"
                        android:textColor="@android:color/darker_gray" android:fontFamily="@font/montserratfont"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#F2F2F2">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#F2F2F2"
                    android:padding="20dp">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:orientation="vertical"
                              android:layout_weight="10">
                    <EditText
                            android:id="@+id/EitInInformationForEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email address"
                            android:padding="20dp"
                            android:drawableLeft="@drawable/ic_person"
                            android:drawableStart="@drawable/ic_person"
                            android:drawablePadding="5dp"
                            android:textColor="#000"
                            android:background="#FFF"
                            android:layout_centerVertical="true"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="7dp" android:fontFamily="@font/montserratfont"
                            android:textColorHint="@color/colorBlack" android:textSize="14sp"/>
                    <EditText
                            android:id="@+id/EitInRInformationProfilForName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:padding="20dp"
                            android:drawableLeft="@drawable/ic_person"
                            android:drawableStart="@drawable/ic_person"
                            android:drawablePadding="5dp"
                            android:textColor="#000"
                            android:background="#FFF"
                            android:layout_centerVertical="true"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="7dp" android:fontFamily="@font/montserratfont"
                            android:textColorHint="@color/colorBlack" android:textSize="14sp"/>

                    <EditText
                            android:id="@+id/EitInRInformationProfilForFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Firstname"
                            android:padding="20dp"
                            android:drawableLeft="@drawable/icon_email"
                            android:drawableStart="@drawable/icon_email"
                            android:drawablePadding="5dp"
                            android:textColor="#000"
                            android:background="#FFF"
                            android:layout_centerVertical="true"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="7dp" android:fontFamily="@font/montserratfont"
                            android:textColorHint="@color/colorBlack" android:textSize="14sp"/>

                    <EditText
                            android:id="@+id/EitInRInformationProfilForBirthday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Birstday"
                            android:padding="20dp"
                            android:drawableLeft="@drawable/icon_email"
                            android:drawableStart="@drawable/icon_email"
                            android:drawablePadding="5dp"
                            android:textColor="#000"
                            android:background="#FFF"
                            android:layout_centerVertical="true"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="7dp" android:fontFamily="@font/montserratfont"
                            android:textColorHint="@color/colorBlack" android:textSize="14sp"
                            android:textStyle="normal"/>

                 <!--   <EditText
                            android:id="@+id/EitInRInformationProfilForPseudo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pseudo"
                            android:padding="20dp"
                            android:drawableLeft="@drawable/icon_email"
                            android:drawableStart="@drawable/icon_email"
                            android:drawablePadding="5dp"
                            android:textColor="#000"
                            android:background="#FFF"
                            android:layout_centerVertical="true"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="7dp" android:textColorHint="@color/colorBlack"
                            android:fontFamily="@font/montserratfont"/>-->




                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="2"
                              android:layout_gravity="bottom"
                              android:orientation="vertical">


                    <LinearLayout
                            android:id="@+id/BtnLogoutForInformation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/pinkbutton">
                        <TextView
                                android:id="@+id/txtLogoutForInformation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign out"
                                android:textColor="#FFF"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="14sp" android:fontFamily="@font/montserratfont"
                                android:textStyle="normal"/>
                        <ProgressBar
                                android:id="@+id/ProgressbarLogoutForInformation"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:padding="1dp"
                                android:background="#00000000"
                                android:progressDrawable="@drawable/progressbarcirculairebtn"
                                android:visibility="visible"
                                android:indeterminateTint="@color/colorWhite"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>