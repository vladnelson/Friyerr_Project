<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="80dp"
            android:paddingRight="80dp" >
        <LinearLayout android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/What_Are_Looking_For"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"/>

        </LinearLayout>
        <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:progress="17" android:layout_weight="1"/>

            <Button
                    android:id="@+id/BtnColocation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/bluebutton"
                    android:text="@string/une_colocation"
                    style="@style/button_text"
                    android:drawableEnd="@drawable/icon_arrow_right_white"
                    android:drawableRight="@drawable/icon_arrow_right_white"
                    android:padding="10dp"/>

            <Button
                    android:id="@+id/BtnLocation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/bluebutton"
                    android:text="@string/un_logement"
                    style="@style/button_text"
                    android:drawableEnd="@drawable/icon_arrow_right_white"
                    android:drawableRight="@drawable/icon_arrow_right_white"
                    android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>