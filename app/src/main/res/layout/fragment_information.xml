<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#F2F2F2"
              android:padding="15dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:orientation="vertical"
                  android:layout_weight="3">
    <EditText
            android:id="@+id/EitInInformationForPseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email address"
            android:padding="20dp"
            android:drawableLeft="@drawable/icon_email"
            android:drawableStart="@drawable/icon_email"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:background="@drawable/edittextstyle"
            android:layout_centerVertical="true"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"/>
    <EditText
            android:id="@+id/EitInRInformationProfilForPseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pseudo"
            android:padding="20dp"
            android:drawableLeft="@drawable/icon_email"
            android:drawableStart="@drawable/icon_email"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:background="@drawable/edittextstyle"
            android:layout_centerVertical="true"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"/>

    <EditText
            android:id="@+id/EitInInformationProfilForPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="20dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icon_lock"
            android:drawableStart="@drawable/icon_lock"
            android:textColor="#000"
            android:background="@drawable/edittextstyle"
            android:layout_centerVertical="true"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:layout_gravity="bottom"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/BtnLogoutForInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/pinkbutton">
        <TextView
                android:id="@+id/txtLogoutForInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign out"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>
        <ProgressBar
                android:id="@+id/ProgressbarLogoutForInformation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="1dp"
                android:background="#00000000"
                android:progressDrawable="@drawable/progressbarcirculairebtn"
                android:visibility="visible"
                android:indeterminateTint="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>